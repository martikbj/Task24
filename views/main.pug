
html(lang='en')
	head
		// Theme Made By www.w3schools.com - No Copyright
		title #{first_name} #{last_name}'s CV Site
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		link(href='https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css', rel='stylesheet')
		link(href='https://fonts.googleapis.com/css?family=Montserrat', rel='stylesheet')
		link(rel="stylesheet", href="style.css", type="text/css")
		script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
		script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js')
	body
		// Navbar
		nav.navbar.navbar-default
			.container
				.navbar-header
					button.navbar-toggle(type='button', data-target='#myNavbar', data-toggle='collapse')
						span.icon-bar
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href='#') #{first_name} #{last_name}
				#myNavbar.collapse.navbar-collapse
					ul.nav.navbar-nav.navbar-right
						li
							a.nav-link(href='#Experience') Experience
						li
							a.nav-link(href='#Education') Education
						li
							a.nav-link(href='#Technologies') Technologies
						li
							a.nav-link(href='#Publications') Publications
		// First Container
		.container-fluid.bg-1.text-center
			h3.margin #{first_name} #{last_name}
			img.img-responsive.img-circle.margin(width='350', height='350', style='display:inline;', alt='Profile pic', src='profile.jpg')
			h3 #{title}
			h4 #{date_of_birth}
			h4 #{email}
			each link in proLinks
							a(href=link.linken class="card-link")
								img(class="card-img-bottom smallimg mx-auto" src=link.imgSRC style="height: 10%; width: 5%; padding: 6px 4px 10px 10px;")
		
		.container-fluid.bg-2.text-center
			h3.margin(id="Experience") Experience
			br
			.row
				each job in experience
					.col.sm-4
						p #{job.employer}
						p #{job.start_date} - #{job.end_date}
						p #{job.description}
						br
			
		
		.container-fluid.bg-3.text-center
			h3.margin(id="Education") Education
			br
			.row
				each school in education
					.col.sm-4
						p #{school.qualification}
						p #{school.institution}
						p #{school.start_year} - #{school.end_year}
						p #{school.description}
						br
		
		.container-fluid.bg-2.text-center
			h3.margin(id="Technologies") Technologies
			br
			.row
				each tech in technologies
					.col.sm-4
						p #{tech.name}
						p #{tech.description}
						br
		
		.container-fluid.bg-3.text-center
			h3.margin(id="Publications") Publications
			br
			.row
				each pub in publications
					.col.sm-4
						p #{pub.title}
						p #{pub.description}
						br
			
		footer.container-fluid.bg-4.text-center
			p
				| Bootstrap Theme Made By 
				a(href='https://www.w3schools.com') www.w3schools.com
